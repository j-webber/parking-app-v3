<% content_for :title, "Showing parking pass" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Your parking pass is:</h1>

  <% if @parking_pass.active? %>
  <div class="font-bold text-8xl bg-green-400 text-green-50 h-96 w-96 flex justify-center items-center mt-5">
    <div>Active!</div>
  </div>
  <% else %>
  <div class="font-bold text-8xl bg-red-400 text-red-50 h-96 w-96 flex justify-center items-center mt-5">
    <div>Expired!</div>
  </div>
  <% end %>

  <%# <%= link_to "Edit this parking pass", edit_parking_pass_path(@parking_pass), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%# <%= link_to "Back to parking passes", parking_passes_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%# <%= button_to "Destroy this parking pass", @parking_pass, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
